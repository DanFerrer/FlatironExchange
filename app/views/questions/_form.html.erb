<%= form_for(@question) do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
      <% @question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "Subject" %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content, "Ask a question" %><br>
    <%= f.text_area :content %>
  </div>

  <div class="field">
    <%= f.collection_select :tag_ids, Tag.all, :id, :name %>
    <br>
    <%= f.fields_for :tags, Tag.new do |tag_f| %><br>
      <%= tag_f.label :name, "Make a New Tag" %>
      <%= tag_f.text_field :name  %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
