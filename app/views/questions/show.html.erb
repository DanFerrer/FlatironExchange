<h4>
 <%= @question.title %>
</h4>

<p>
  <strong>* * *</strong><br />
  <%= @question.content %>
</p>

<p>Asked on <%= @question.created_at.strftime("%B %d, %Y") %> by <%= link_to @question.asker.name, user_path(@question.asker_id) %>
<%= link_to_image(@question.asker.image_url, user_path(@question.asker_id)) %> </p> 

<p><%= raw @question.tag_list.map {|t| link_to t, tag_path(t) }.join(", ") %></p>

<ul>
  <% if !@question.answers.empty? %>
    <% @question.answers.each do |answer| %>
     <li><p><%= answer.content %></p></li>
     <p>Answered on <%= answer.created_at.strftime("%B %d, %Y") %> by <%= link_to answer.responder.name, user_path(answer.responder.id) %> <%= link_to_image(answer.responder.image_url, user_path(answer.responder_id)) %> </p>
     <%= link_to('', vote_up_answer_path(answer), :method => :post, class: "glyphicon glyphicon-thumbs-up") %> <%= pluralize(answer.votes.count, 'vote') %>
    <%end%>
  <%end%>
</ul>
<%= form_for([@question, Answer.new]) do |f| %>
  <%= f.label :content, "Submit your answer" %>
  <%= f.text_field :content  %>
  <div class="actions">
    <br /><%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %><br />

<% if @question.asker_id == current_user.id %>
<%= link_to 'Edit', edit_question_path(@question), class: "btn btn-primary" %> |
<% end %>
<%= link_to 'Back', questions_path, class: "btn btn-primary" %>
