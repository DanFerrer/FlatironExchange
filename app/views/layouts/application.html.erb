<!DOCTYPE html>
<html>
<head>
  <title>FlatironExchange</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= analytics_init if Rails.env.production? %>
</head>

<body>
  <div id="wrapper">

    <div id="header">
      <%= render "layouts/header"  %>
    </div>

    <div class="container">
      <% flash.each do |name, msg| %>
          <div class="alert alert-<%= name %> alert-dismissable" data-dismiss="alert" aria-hidden="true" style="cursor: pointer">
            <%= msg %>
          </div>
      <% end %>
   
      <%= yield %>
    </div>

    

  </div><!-- #wrapper -->

</body>

</html>